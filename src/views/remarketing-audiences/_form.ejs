<div id="ga-remarketing-audiences">
  <h5>
    <img src="/images/adminhome_remarketing.png">
    Audience Definitions
  </h5>

  <div class="form-group">
    <div class="input-group">
      <input type="text" id="ga-remarketing-name" class="form-control" placeholder="Audience Name" />
      <div class="input-group-append" data-toggle="tooltip" data-placement="bottom" title="Membership duration in days will be appended to the audience name automatically">
        <span class="input-group-text" id="basic-addon2">- N days</span>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label for="ga-remarketing-audience-type">Type</label>

    <select type="text" id="ga-remarketing-audience-type" class="form-control">
      <option value="SIMPLE">Simple Audience Type</option>
      <option value="STATE_BASED">State Based Audience Type</option>
    </select>
  </div>

  <div class="tab-content" id="ga-remarketing-audience-tab-content" style="margin-top:1rem;">
    <div id="ga-remarketing-audience-include-conditions" role="tabpanel">
      <h6>Include Conditions</h6>
      <div class="form-group">
        <label for="ga-remarketing-include-condition-segment">Segment</label>
        <textarea id="ga-remarketing-include-condition-segment" class="form-control" placeholder="Enter a segment expression e.g. users::condition::ga:browser==Chrome"></textarea>
      </div>
      <div class="form-group">
        <label for="ga-remarketing-include-condition-membership-duration-days">Membership Duration (days)</label>
        <input id="ga-remarketing-include-condition-membership-duration-days" class="form-control" placeholder="Between 1-540 days, comma separated" />
      </div>

      <label for="ga-remarketing-include-condition-days-to-look-back">Look Back (days)</label>
      <div class="form-group">
        <select id="ga-remarketing-include-condition-days-to-look-back" class="form-control">
          <option value="0">None</option>
          <option value="7">7 days</option>
          <option value="14">14 days</option>
          <option value="30">30 days</option>
        </select>
      </div>

      <div class="form-group">
        <div class="custom-control custom-switch">
          <input class="custom-control-input" type="checkbox" value="1" id="ga-remarketing-include-condition-is-smart-list">
          <label class="custom-control-label" for="ga-remarketing-include-condition-is-smart-list">
            Smart List?
          </label>
        </div>
      </div>
    </div>


    <div id="ga-remarketing-audience-sb-include-conditions" role="tabpanel">
      <h6>State Based Include Conditions</h6>
      <div class="form-group">
        <label for="ga-remarketing-sb-include-condition-segment">Segment</label>
        <textarea id="ga-remarketing-sb-include-condition-segment" class="form-control" placeholder="Enter a segment expression e.g. users::condition::ga:browser==Chrome"></textarea>
      </div>
      <div class="form-group">
        <label for="ga-remarketing-sb-include-condition-membership-duration-days">Membership Duration (days)</label>
        <input id="ga-remarketing-sb-include-condition-membership-duration-days" class="form-control" placeholder="Between 1-540 days, comma separated"  />
      </div>

      <label for="ga-remarketing-sb-include-condition-days-to-look-back">Look Back (days)</label>
      <div class="form-group">
        <select id="ga-remarketing-sb-include-condition-days-to-look-back" class="form-control">
          <option value="0">None</option>
          <option value="7">7 days</option>
          <option value="14">14 days</option>
          <option value="30">30 days</option>
        </select>
      </div>

      <h6>State Based Exclude Conditions</h6>
      <div class="form-group">
        <label for="ga-remarketing-sb-exclude-condition-segment">Segment</label>
        <textarea id="ga-remarketing-sb-exclude-condition-segment" class="form-control" placeholder="Enter a segment expression e.g. users::condition::ga:browser==Chrome"></textarea>
      </div>
      <div class="form-group">
        <label for="ga-remarketing-sb-exclusion-duration">Exclusion Duration</label>
        <!-- <input id="ga-remarketing-sb-exclusion-duration" class="form-control" disabled value="TEMPORARY">
         -->
        <select id="ga-remarketing-sb-exclusion-duration" class="form-control">
          <option value="TEMPORARY" selected="selected">Temporary</option>
          <!-- <option value="PERMANENT">Permanent</option> -->
        </select>

      </div>

      <div class="form-group">
        <div class="custom-control custom-switch">
          <input class="custom-control-input" type="checkbox" value="1" id="ga-remarketing-sb-include-condition-is-smart-list">
          <label class="custom-control-label" for="ga-remarketing-sb-include-condition-is-smart-list">
            Smart List?
          </label>
        </div>
      </div>
    </div>
  </div>
</div>
